<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	>
<TextView android:id="@+id/groupname"
	android:textSize="22sp" android:textStyle="bold" android:paddingLeft="40dp"
	android:paddingTop="2dp" android:paddingBottom="2dp"
	android:layout_width="10dp" android:layout_height="wrap_content"
	android:layout_weight="1"
	android:textColor="#fff"
	android:background="@drawable/group_background" />
<TextView android:id="@+id/groupcount"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:textSize="22sp" android:textStyle="bold" android:paddingLeft="40dp"
	android:paddingTop="2dp" android:paddingBottom="2dp"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:textColor="#ddd"
	android:background="@drawable/group_background" />
</LinearLayout>
